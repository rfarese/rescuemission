<h1><%= @question.title %></h1>

<p><%= @question.description %></p>

<h2>Add an Answer:</h2>
<%= form_for([@question, @question.answers.build]) do |f| %>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back to Questions", questions_path %>
